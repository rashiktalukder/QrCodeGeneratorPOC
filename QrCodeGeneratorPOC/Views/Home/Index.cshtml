@model QrCodeModel


<div class="container my-5">
    <h1>QR Code Generator</h1>
    <form asp-action="Index" method="post">
        <div class="form-group">
            <label class="font-weight-bold">Product Name:</label>
            <input asp-for="ProductName" class="form-control" required />
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Product Type:</label>
            <input asp-for="ProductType" class="form-control" required />
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Product Description:</label>
            <textarea asp-for="ProductDescription" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Generate QR Code</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.QrImageUrl))
    {
        <div class="mt-3 text-center">
            <h2>Your QR Code:</h2>
            <img src="@Model.QrImageUrl" alt="QR Code" height="400" width="400"/>
        </div>
    }
</div>